.button {
  font-size: 28rpx;
  text-transform: 'uppercase';
  font-weight: 500;
}
.m-ui__shadow0 {
  box-shadow: none;
}
.m-ui__shadow1 {
  box-shadow: 0px 1px 3px 0px rgba(0, 0, 0, 0.2), 0px 1px 1px 0px rgba(0, 0, 0, 0.14), 0px 2px 1px -1px rgba(0, 0, 0, 0.12);
}
.m-ui__shadow2 {
  box-shadow: 0px 1px 5px 0px rgba(0, 0, 0, 0.2), 0px 2px 2px 0px rgba(0, 0, 0, 0.14), 0px 3px 1px -2px rgba(0, 0, 0, 0.12);
}
.m-ui__shadow6 {
  box-shadow: 0px 3px 5px -1px rgba(0, 0, 0, 0.2), 0px 6px 10px 0px rgba(0, 0, 0, 0.14), 0px 1px 18px 0px rgba(0, 0, 0, 0.12);
}
.button-base {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  position: relative;
  background-color: transparent;
  outline: none;
  border: none;
  margin: 0;
  border-radius: 0;
  padding: 0;
  user-select: none;
  vertical-align: middle;
  text-decoration: none;
  color: inherit;
}
.button-base::after {
  border: none;
}
.ripple-bd {
  display: block;
  position: absolute;
  overflow: hidden;
  border-radius: inherit;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  pointer-events: none;
  z-index: 0;
  opacity: 1;
}
.ripple {
  left: 0;
  top: 0;
  opacity: 1;
  position: absolute;
}
.ripple-visible {
  opacity: 0.3;
  transform: scale(1);
  animation: mui-ripple-enter 250ms cubic-bezier(0.4, 0, 0.2, 1) 200ms;
}
.ripple-pulsate {
  animation-Duration: 250ms;
}
.child {
  opacity: 0;
  display: block;
  width: 100%;
  height: 100%;
  border-radius: 100%;
  background: #ccc;
}
.child-leaving {
  opacity: 0;
  animation: mui-ripple-exit 250ms cubic-bezier(0.4, 0, 0.2, 1);
}
.child-pulsate {
  position: absolute;
  left: 0;
  top: 0;
  animation: mui-ripple-pulsate 1s cubic-bezier(0.4, 0, 0.2, 1) 0ms 1;
}
@keyframes mui-ripple-enter {
  0% {
    transform: scale(0);
    opacity: 0.1;
  }
  100% {
    transform: scale(1);
    opacity: 0.3;
  }
}
@keyframes mui-ripple-exit {
  0% {
    opacity: 1;
  }
  100% {
    opacity: 0;
  }
}
@keyframes mui-ripple-pulsate {
  0% {
    transform: scale(0);
    opacity: .5;
  }
  100% {
    transform: scale(20);
    opacity: 0;
  }
}
