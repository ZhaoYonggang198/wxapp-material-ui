<view 
  class="root" 
  style="{{styles}}"
  hover-class="root-hover"    
>
  <Avatar 
    wx:if="{{avatar || src}}"
    classes="avatar"
    src="{{src}}">
    {{avatar}}
  </Avatar>
  <text class="label"><slot></slot></text>
  <Icon wx:if="{{delete || deleteIcon != 'clear'}}" classes="delete-icon">{{deleteIcon}}</Icon>
</view>
