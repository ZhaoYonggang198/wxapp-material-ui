<Modal classes="root" style="{{styles}}" open="{{open}}" bind:onClose="onClose">
  <M-Slider stop="{{open}}" direction="{{anchor}}" classes="{{anchor}}">
    <Paper square elevation="{{variant === 'temporary' ? elevation : 0}}" classes="paper-anchor-{{anchor}}">
      <slot></slot>
    </Paper>
  </M-Slider>
</Modal>
