.root {
  padding: 30rpx 20rpx;
  background: #eee;
  margin-top: 100rpx;
}

.title {
  color: #000;
  font-weight: bold;
  font-size: 50rpx;
  margin-bottom: 20rpx;
}
.description {
  font-size: 30rpx;
  margin-bottom: 40rpx;
}
.secondary-title {
  font-size: 40rpx;
  margin: 60rpx 0 20rpx;
}
.waring {
  padding: 20rpx 0 0;
  font-size: 26rpx;
  color: red;
}
.demo {
  background: #fff;
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  min-height: 100px;
  align-items: center;
  justify-content: center;
  align-content: space-around;
  padding: 10px;
}

.card {
  display: flex;
}

.details {
  display: flex;
  flex-direction: column;
}

.content {
  flex: 1 0 auto;
}

.cover {
  width: 302rpx;
  height: 302rpx;
}

.icon {
  width: 76rpx;
  height: 76rpx;
  text-align: center;
  line-height: 76rpx !important;
}

.controls {
  display: flex;
  align-items: center;
  padding-left: 16rpx;
  padding-bottom: 16rpx; 
}
 